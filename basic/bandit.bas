1000 REM THIS PROGRAM SIMULATES THE MECHANICAL
1010 REM THREE WHEEL ONE-ARM-BANDIT
1020 PRINT"ARE INTRUCTIONS REQUIRED?"
1030 PRINT"TYPE EITHER 'YES' OR 'NO'"
1040 INPUT L$
1050 IF L$="YES" THEN 1090
1060 IF L$="NO" THEN 1160
1070 PRINT"INVALID COMMAND"
1080 GOTO 1020
1090 PRINT"SCORING IS SIMPLE; 3 ORANGES, LEMONS OR"
1100 PRINT"BANANAS EARN $10. 3 CHERRIES EARN $90."
1110 PRINT"IF THE FIRST FRUIT IS AN APPLE, YOU EARN $2"
1120 PRINT"IF THE FIRST AND SECOND ARE APPLES, YOU EARN $3."
1130 PRINT"IF THE LAST FRUIT IS A CHERRY AND THE"
1140 PRINT"OTHER TWO ARE THE SAME BUT NOT APPLES YOU"
1150 PRINT"EARN $10. EACH TURN COSTS $1. GOOD LUCK"
1160 LET J=0
1170 PRINT
1180 GOSUB 1580
1190 LET S1=S
1200 GOSUB 1580
1210 LET S2=S
1220 GOSUB 1580
1230 LET S3=S
1240 LET S=S1
1250 GOSUB 1600
1260 LET S1$=S$
1270 LET S=S2
1280 GOSUB 1600
1290 LET S2$=S$
1300 LET S=S3
1310 GOSUB 1600
1320 LET S3$=S$
1330 IF S1$="CHERRY" THEN 1370
1340 IF S1$="APPLE" THEN 1410
1350 IF S1$=S2$ THEN 1430
1360 GOTO 1450
1370 IF S1$=S2$ THEN 1390
1380 GOTO 1450
1390 IF S2$=S3$ THEN 1470
1400 GOTO 1450
1410 IF S1$=S2$ THEN 1490
1420 GOTO 1510
1430 IF S2$=S3$ THEN 1530
1440 IF S3$="CHERRY" THEN 1530
1450 LET J=J-1
1460 GOTO 1540
1470 LET J=J+89
1480 GOTO 1540
1490 LET J=J+2
1500 GOTO 1540
1510 LET J=J+1
1520 GOTO 1540
1530 LET J=J+9
1540 PRINT
1550 PRINT S1$;" ";S2$;" ";S3$
1560 PRINT"YOUR TOTAL EARNINGS ARE NOW $";J
1570 GOTO 1710

1580 LET S=1+INT(5*RND)
1590 RETURN

1600 ON S GOTO 1610,1630,1650,1670,1690
1610 LET S$="CHERRY"
1620 GOTO 1700
1630 LET S$="APPLE"
1640 GOTO 1700
1650 LET S$="LEMON"
1660 GOTO 1700
1670 LET S$="ORANGE"
1680 GOTO 1700
